<!-- Friends bar -->
<div class="navbar friends-bar">
  <section>
      <h3 class="navbar-header friends-text">Friends</h3>
  </section>
</div>


<% if all_friends(@user).count.between?(1,6) %>

  <% all_friends(@user).each do |friend| %>
    <%= render partial: "friend", locals: { friend: friend } %>
  <% end %>

<% elsif all_friends(@user).count >= 6 %>

  <% 6.times do %>
    <%= render partial: "friend", locals: { friend: all_friends(@user).sample } %>
  <% end %>

<% else %>

  <h3 class="text-center">No friends yet, use the search bar to find `em!</h3>

<% end %>


