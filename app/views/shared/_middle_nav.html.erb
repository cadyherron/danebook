<div class="row">
  <!-- Main photo -->
  <section>
    <div class="jumbotron"></div>
  </section>
</div>

  <!-- Profile photo -->
<div class="row">
  <section class="col-sm-4 img-responsive profile-pic">
    <%= image_tag 'harry_potter_small.jpg' %>
  </section>
</div>

  <!-- Name -->
<div class="row">
  <section>
    <div class="float-name"><%= "#{profile.user.first_name} #{profile.user.last_name}" %></div>
    <% unless profile.user == current_user %>
      <%= button_to "Add Friend" %>
    <% end %>
  </section>
</div>


<!-- Middle navigation links -->
<div class="row">
  <section>
    <ul class="nav nav-pills middle-nav">
      <li role="presentation" class="img-bucket"></li>
      <li><%= link_to "Timeline", user_timeline_path, {class: "clickable"} %></li>
      <li><%= link_to "About", user_profile_path(profile.user), {class: "clickable"} %></li>
      <li><%= link_to "Photos", {}, {class: "clickable"} %></li>
      <li><%= link_to "Friends", {}, {class: "clickable"} %></li>

      <% if profile.user == current_user %>
      <li><%= link_to "Edit Profile", edit_user_profile_path(profile.user), {class: "navbar-right"} %></li>
      <% end %>
    </ul>

  </section>
</div>