
<div class="row">

  <div class="col-sm-4">
    <%= render partial: "left_side", locals: { user: @user } %>
  </div>


  <div class="col-sm-7 col-sm-offset-1 posts">

    <% if current_user == @user %>
      <%= render partial: "new", locals: { post: @new_post } %>
    <% end %>
  
    <% unless @posts.empty? %>

      <ul style="list-style-type:none">
        <% @posts.each do |post| %>
          <li>
          <%= render partial: 'post', locals: { post: post } %>
          </li>
        <% end %>
      </ul>

    <% end %>

  </div>



</div>