
<div class="row">

  <div class="col-sm-4">
    <%= render partial: "left_side", locals: { user: @user } %>
  </div>

  <div class="col-sm-7 col-sm-offset-1">
    <% unless @posts.empty? %>
      <% if current_user == @posts.first.user %>
        <%= render partial: "new", locals: { post: @new_post } %>
      <% end %>
    
      <% @posts.each do |post| %>
        <%= render partial: 'post', locals: { post: post } %>
      <% end %>

    <% end %>
  </div>


</div>